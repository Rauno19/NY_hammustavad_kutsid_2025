import pandas as pd
# Read in data from Excel (requires openpyxl). Adjust the filename as needed:
df = pd.read_excel('andmestikud/NY_kutsid_puhastatud_v4_workfile.xlsx', decimal=',')

# Rename date-related columns (optional, but helpful for clarity).
df = df.rename(columns={'DateOfBite': 'Date'})

# Export to Parquet
df.to_parquet('andmestikud/NY_kutsid_puhastatud_v4_workfile.parquet', index=False)

